<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<EditText android:id="@+id/val"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<Button android:id="@+id/opPlus"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="+"
	/>
<Button android:id="@+id/opMinus"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="-"
	/>
<Button android:id="@+id/opMult"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="*"
	/>
<Button android:id="@+id/opDiv"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="/"
	/>
<Button android:id="@+id/opEq"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="="
	/>
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<Button android:id="@+id/val7"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="7"
	/>
<Button android:id="@+id/val8"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="8"
	/>
<Button android:id="@+id/val9"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="9"
	/>
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<Button android:id="@+id/val4"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="4"
	/>
<Button android:id="@+id/val5"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="5"
	/>
<Button android:id="@+id/val6"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="6"
	/>
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<Button android:id="@+id/val1"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="1"
	/>
<Button android:id="@+id/val2"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="2"
	/>
<Button android:id="@+id/val3"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="3"
	/>
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<Button android:id="@+id/clear"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="C"
	/>
<Button android:id="@+id/dot"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="."
	/>
<Button android:id="@+id/val0"
	android:layout_width="0dp"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="0"
	/>
</LinearLayout>
</LinearLayout>